<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>

<?import javafx.scene.text.Font?>
<VBox
        alignment="CENTER_LEFT"
        spacing="20.0"
        xmlns="http://javafx.com/javafx/17.0.12"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="org.arkn37.controller.AuthorController"
>
    <ProgressIndicator fx:id="loadingAuthor" visible="false"/>
    <HBox>
        <ImageView fitWidth="80.0" pickOnBounds="true" preserveRatio="true" fx:id="thumbnail"/>
        <VBox>
            <Label fx:id="name">
                <font>
                    <Font size="18"/>
                </font>
            </Label>
            <Label fx:id="email"/>
            <Label fx:id="affiliations"/>
            <Button text="Show Articles" onAction="#showArticles"/>
        </VBox>
    </HBox>
</VBox>