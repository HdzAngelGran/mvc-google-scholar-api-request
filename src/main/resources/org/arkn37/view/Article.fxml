<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0"
      prefWidth="600.0"
      spacing="20.0"
      style="-fx-padding: 2em;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.arkn37.controller.ArticleController">
    <Label fx:id="title">
        <font>
            <Font size="18"/>
        </font>
    </Label>
    <Label fx:id="authors" style="-fx-font-size: 1em;"/>
    <Label fx:id="publicationDate" style="-fx-font-size: 1em;"/>
    <Label fx:id="summary" style="-fx-font-size: 1em;"/>
    <Hyperlink fx:id="link" onAction="#openLink" style="-fx-font-size: 1em;"/>
    <Label fx:id="keywords" style="-fx-font-size: 1em;"/>
    <Label fx:id="citedBy" style="-fx-font-size: 1em;"/>
</VBox>
