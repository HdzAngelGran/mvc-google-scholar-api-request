<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.arkn37.controller.SearchListController" stylesheets="@style.css">
    <HBox spacing="10.0">
        <TextField fx:id="authorName" promptText="Enter author name" HBox.hgrow="ALWAYS"/>
        <Button onAction="#getAuthorByName" text="Search"/>
    </HBox>
    <ListView fx:id="authorListView">
        <placeholder>
            <VBox alignment="CENTER" spacing="10.0">
                <children>
                    <ProgressIndicator fx:id="loadingList" visible="false"/>
                    <Label text="No content to display."/>
                    <Label text="Enter an author's name in the search bar and click Search." textAlignment="CENTER"
                           wrapText="true"/>
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </VBox>
        </placeholder>
    </ListView>
</VBox>
